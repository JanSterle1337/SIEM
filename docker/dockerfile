# Stage 1: Application Builder (Uses the full image to guarantee consistent tooling and libs)
FROM node:22 AS builder 

WORKDIR /app

# 1. Copy the local Juice Shop source code
COPY juice-shop/ .

# 2. Copy your custom logger middleware
COPY logger.js .

# 3. Install dependencies and build
RUN npm install
RUN npm run build

# 4. Modify the *compiled* JavaScript file for logging injection
RUN sed -i "s|app.use(bodyParser.json());|app.use(bodyParser.json());\napp.use(require('./logger'));|" \
    ./build/src/server.js

# --------------------------------------------------------------------------

# Stage 2: Final Runtime Image (Uses the same full, reliable image)
FROM node:22 

WORKDIR /juice-shop

# 1. Copy the built application from the builder stage
COPY --from=builder /app/build ./build
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/logger.js .
COPY --from=builder /app/package.json .
COPY --from=builder /app/frontend ./frontend

# 2. Create log directory (Where your logger.js will write logs)
RUN mkdir -p /var/log/juice-shop

EXPOSE 3000
CMD ["npm", "start"]